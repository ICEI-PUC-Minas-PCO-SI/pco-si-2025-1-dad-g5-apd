
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String      @unique
  senha      String
  transacoes Transacao[] // ‚Üê Adicionado aqui
}

model Transacao {
  id        Int     @id @default(autoincrement())
  tipo      String
  valor     Float
  descricao String
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}
